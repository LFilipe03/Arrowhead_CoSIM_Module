<?xml version="1.0"?>
<robot name="computer_case" xmlns:xacro="http://ros.org/wiki/xacro">

 
  <xacro:arg  name="namespace" default=""/>

    <!--The Edge Computer is static-->
  <gazebo>
    <static>true</static>
  </gazebo>


    <link name="$(arg namespace)base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
        </inertial>
        <collision name="collision">
            <geometry>
             <box size="0.01 0.01 0.01"/>
            </geometry>
        </collision>
        <visual name="visual">
            <geometry>
                <mesh filename="package://edge/meshes/case.dae"/>
            </geometry>
        </visual>
    </link>

    <link name="$(arg namespace)edge_link">
        <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1"/>
        <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001" />
        </inertial>
    </link>

    <!-- Add the fixed joint between "world" and "base_link" -->

    <joint name="fixed_joint" type="fixed">
        <parent link="$(arg namespace)base_link"/>
        <child link="$(arg namespace)edge_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>



    
</robot>